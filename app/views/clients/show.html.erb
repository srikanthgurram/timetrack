<h4>Client Details</h4>
<hr>
<p>
	<strong>Client Name:</strong> <%= @client.name %><br/>

</p>
<hr>
<h4>All the Projects</h4>	
	
	<table class="table table-hover">
    	<thead>
        <tr>            
            <th>Project</th>
            <th>Default Rate</th>
          </tr>
    	</thead>
   	 	<tbody>
   	 	<% @client_projects.each do |cli_prj| %>	
        <tr>
            <td><%= link_to cli_prj.name, cli_prj %></td>
            <td><%= cli_prj.default_rate %></td>
          </tr>
          <% end %>
        </tbody>
    </table>
    
    <!-- Pagination-->    
	<%= will_paginate @client_projects %>
	<br/><%= link_to "Back to Clients", clients_path %>