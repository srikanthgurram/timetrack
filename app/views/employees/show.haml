- content_for :head do
  %title #{@employee} details

%h4 Employee Details
%hr
%p= link_to "Edit Employee", edit_employee_path(@employee)
%p= link_to "Delete Employee", @employee, :method => "delete", data: { confirm: "Are You sure?" }
= image_tag "empty_profile_male.jpg", alt: "Profile", class: "img-circle", size: "140x140"
%ul  
  %li 
    %strong Employee Name:
    = @employee.first_name+" "+@employee.last_name
  %li
    %strong First Name:
    = @employee.first_name
  %li
    %strong Last Name
    = @employee.last_name
  %li
    %strong User Name:
    = @employee.username
  %li
    %strong Work: 
    = link_to "Details", {:controller => 'employees', :action => 'work'}

%hr
- content_for :aside do
  = render "sidebar"