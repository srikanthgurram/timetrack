- content_for :head do
  %title #{@client.name} details

%h4 Client Details
%div{:class => "btn-group"}
  %button{:type => "button", :class => "btn btn-info dropdown-toggle", data: {toggle: "dropdown"}}
    Update
    %span{:class => "caret"}
    
  %ul{:class => "dropdown-menu", :role => "menu"}
    %li= link_to "Edit", edit_client_path(@client)
    %li= link_to "Delete", @client, :method => "delete", data: { confirm: "Are You sure?" }

%hr
%p
  %strong Client:
  = @client.name
%p
  %strong Company
  = @client.company.name

%hr
%h4 All the Projects  
%table.table.table-hover
  %thead
    %tr
      %th Project
      %th Default Rate
  %tbody
    = render partial: "projects/project", collection: @client_projects
= will_paginate @client_projects

- content_for :aside do
  = render "sidebar"