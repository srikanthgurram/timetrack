= if @client.errors.any?
  %p Please fix the following #{pluralize(@client.errors.count, "error")}
  %ol
    - @client.errors.messages.each do |message|
      %li= message

%h1 Add new Client
.row
  .span6.offset3
    = form_for(@client) do |c|
      %div
        = c.label :name, 'Client Name'
        = c.text_field :name
      %div
        = c.label :company_id
        = c.collection_select(:company_id, Company.all.order('name'), :id, :name, prompt: true)
      %div
        = c.submit "Add", class: "btn btn-large btn-primary"

- content_for(:aside) do
  = render "sidebar"