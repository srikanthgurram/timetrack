- content_for :head do
  %title #{@project.name} Details

%h4 Project Details
%div{:class => "btn-group"}
  %button{:type => "button", :class => "btn btn-info dropdown-toggle", data: {toggle: "dropdown"}}
    Update
    %span{:class => "caret"}
    
  %ul{:class => "dropdown-menu", :role => "menu"}
    %li= link_to "Edit", edit_project_path(@project)
    %li= link_to "Delete", @project, :method => "delete", data: { confirm: "Are You sure?" }

%hr
%p
  %ul
    %li
      %strong Project Name: 
      #{@project.name}
    %li
      %strong Default Rate: 
      #{@project.default_rate}
    %li
      %strong All the work done: 
      #{link_to "Details", {:controller => 'projects', :action => 'works'}}

- content_for(:aside) do
  = render "sidebar"